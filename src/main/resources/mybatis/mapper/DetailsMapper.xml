<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.laptop.demo.mapper.DetailsMapper">

    <select id="getDetails" resultType="Detail">
        select channel_3,detail
        from science
        <where>
        channel_1=#{channel_1} and channel_2=#{channel_2}
        </where>
         order by id
    </select>

    <select id="getBrandDetail" resultType="Brand">
        select name,intro
        from brand
        <where>
            name=#{name}
        </where>
    </select>
</mapper>
